<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backclientsanketa1">

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="758dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/secname" />

            <EditText
                android:id="@+id/editSecondName"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:ems="20"
                android:hint="Иванов"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="48dp"
                android:layout_height="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/name" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="Иван"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/age" />

            <EditText
                android:id="@+id/editAge"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="19"
                android:inputType="number"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/telephonenum" />

            <EditText
                android:id="@+id/editPhoneNumber"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="89960000000"
                android:inputType="phone"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="128dp"
                android:layout_height="26dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/experience" />

            <EditText
                android:id="@+id/editExpTr"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="1 год без перерывов"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/goals" />

            <EditText
                android:id="@+id/editGoals"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="Снижение веса, восстановление после травм, набор мышечной массы"
                android:inputType="textLongMessage"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/donteat" />

            <EditText
                android:id="@+id/editDontEat"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="Лук"
                android:inputType="textLongMessage"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/height" />

            <EditText
                android:id="@+id/editHeight"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="175"
                android:inputType="number"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/weight" />

            <EditText
                android:id="@+id/editAnketaWeight"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="80.5"
                android:inputType="number"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/bads" />

            <EditText
                android:id="@+id/editBADS"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="Протеин"
                android:inputType="textLongMessage"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/numoftrainings" />

            <EditText
                android:id="@+id/editNumTrainings"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="3"
                android:inputType="number"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/numofeats" />

            <EditText
                android:id="@+id/editNumEats"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="3"
                android:inputType="number"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blood" />

            <EditText
                android:id="@+id/editBlood"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/field"
                android:hint="Растяжение связки"
                android:inputType="textLongMessage"
                android:paddingStart="25dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <ImageButton
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/buttonchooseyourfighters" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>